<!DOCTYPE html>
<html>
<head>
    <style>
        /* Apply styles to the table */
        table {
        border-collapse: collapse;
        width: 100%;
        }

        /* Style table headers */
        th {
        background-color: #333;
        color: white;
        padding: 8px;
        text-align: left;
        }

        /* Style alternating rows */
        tr:nth-child(even) {
        background-color: #f2f2f2;
        }

        /* Style table data cells */
        td {
        padding: 8px;
        border: 1px solid #ddd;
        }

        header {
        background-color: #333;
        color: #fff;
        text-align: center;
        padding: 20px;
        }

        main {
        max-width: 800px;
        margin: 0 auto;
        }

        footer {
        text-align: center;
        padding: 10px;
        background-color: #333;
        color: #fff;
        }

        .chart-box {
            width: 40%;
            display: inline-block;
            margin: 0 auto;
            box-sizing: border-box;
        }

        canvas {
            width: 100%;
            height: 400px;
        }

        .tab {
            overflow: hidden;
        }

        .tab button {
            background-color: #f2f2f2;
            float: left;
            border: 1px solid #ccc;
            outline: none;
            cursor: pointer;
            padding: 10px 15px;
            transition: 0.1s;
            color: #000;
        }

        .tab button:hover {
            background-color: #ddd;
        }

        .tab button.active {
            background-color: #007bff; /* Bootstrap primary color */
            color: #fff; /* White text on the primary button */
        }

        .tabcontent {
            display: none;
        }

    </style>
</head>
<body>
    <h1>School Level Statistics</h1>

    <br>
    <br>
    <br>
    <div class="tab">
      <button class="tablinks btn btn-primary" onclick="openTab(event, 'chartTab')">Chart</button>
      <button class="tablinks btn btn-primary" onclick="openTab(event, 'tableTab')">Table</button>
      <button class="tablinks btn btn-primary" onclick="redirectToImpactReport()">Impact Report</button>
    </div>

    <div id="chartTab" class="tabcontent">
    <br>
        <div class="chart-box">
        <canvas id="groupedChart1"></canvas>
        </div>
    </div>

    <div id="tableTab" class="tabcontent">
    <br>
        <table>
            <tr>
                <th>School Name</th>
                <th>Date</th>
                <th>Children Screened</th>
                <th>Children received Sealants</th>
                <th>Teeth Sealed</th>
                <th>Children received Fluoride Varnish</th>
            </tr>
            <tr>
                <% @school_data.each do |data| %>
                    <tr>
                        <td><%= data.SchoolName %></td>
                        <td><%= data.Date %></td>
                        <td><%= data.children_screened %></td>
                        <td><%= data.children_rec_sealants %></td>
                        <td><%= data.teeth_sealed %></td>
                        <td><%= data.children_with_fluoride %></td>
                    </tr>
                <% end %>
            </tr>
        </table>
    </div>

<script>
    document.getElementById('chartTab').style.display = 'block';
    document.querySelector('.tab button.tablinks:nth-child(1)').classList.add('active')

    function openTab(evt, tabName) {
        var i, tabcontent, tablinks;
        tabcontent = document.getElementsByClassName('tabcontent');
        for (i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = 'none';
        }
        tablinks = document.getElementsByClassName('tablinks');
        for (i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(' active', '');
        }
        document.getElementById(tabName).style.display = 'block';
        evt.currentTarget.className += ' active';
    }
    function redirectToImpactReport() {
        window.location.href = '<%= statistics_impactReport_path %>';
    }
    var ctxGrouped1 = document.getElementById('groupedChart1').getContext('2d');
        var groupedChart1 = new Chart(ctxGrouped1, {
            type: 'bar',
            data: <%= @chart_data1.to_json.html_safe %>,
            options: {
            scales: {
                y: {
                beginAtZero: true
                }
            }
            }
        });
</script>
</body>
</html>